{
    "version": 2,
    "builds": [
      {
        "src": "server.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "build/**"
          ]
        }
      },
      {
        "src": "build/client/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/build/client/(.*)",
        "headers": { "cache-control": "public, max-age=31536000, immutable" },
        "dest": "/build/client/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/server.ts"
      }
    ]
  }